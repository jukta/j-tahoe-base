<sv:root xmlns:sv="http://jukta.com/tahoe/schema"
         xmlns="http://www.w3.org/1999/xhtml"
         xmlns:lc="."
         namespace="com/jukta/base/form">

    <sv:block name="textField">
        <div class="textField ${error == 'true' ? 'error' : ''}">
            <span>${label}</span>
            <input type="text" name="${fieldName}" value="${value}">
                <sv:def/>
            </input>
        </div>
    </sv:block>

    <sv:block name="button">
        <button type="${type}" class="button">${label}</button>
    </sv:block>

</sv:root>